{
  "name": "osm-helper",
  "description": "OSM Helper",
  "author": "Adam GÄ…sowski (gander)",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "release": "release-it"
  },
  "dependencies": {
    "vue": "^3.4.31"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.14.10",
    "@vitejs/plugin-vue": "^5.0.5",
    "release-it": "^17.6.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-monkey": "^4.0.4",
    "vue-tsc": "^2.0.26"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "tagName": "v${version}",
      "commitArgs": [
        "-S"
      ]
    },
    "github": {
      "release": true,
      "draft": true,
      "assets": [
        "dist/**/*.js"
      ],
      "releaseName": "v${version}"
    },
    "hooks": {
      "after:bump": [
        "npm run build"
      ]
    }
  }
}
